{
  "sources": {
    "task-thermal-source": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/tceglar/heat/master/data/smallsample3.geojson"
    }
  },
  "layers": [
    {
      "id": "task-heatmap-layer",
      "type": "circle",
      "source": "task-thermal-source",
      "paint": {
        "circle-radius": 4,
        "circle-color": "#ff0000",
        "circle-stroke-width": 2,
        "circle-stroke-color": "#fff"
      },
      "filter": ["in", "$type", "Point"]
    }
  ]
}
