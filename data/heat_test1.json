{
  "sources": {
    "task-thermal-source": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/tceglar/heat/master/data/smallsample.geojson"
            }
  },
  "layers": [
    {
      "id": "custom-heatmap-layer",
      "type": "heatmap",
      "source": "task-thermal-source",
      "maxzoom": 15,
      "paint": {
        "heatmap-weight": [
          "interpolate",
          ["linear"],
          ["get", "mag"],
          0, 0,
          15, 1
        ],
        "heatmap-intensity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          0, 1,
          15, 3
        ],
        "heatmap-radius":[
          "interpolate",
          ["linear"],
          ["zoom"],
          0, 5,
          15, 20
        ],
        "heatmap-color": [
          "interpolate",
          ["linear"],
          ["heatmap-density"],
          0, "hex(#010005)",
          0.2, "hex(#3d0f71)",
          0.4, "hex(#8e2a81)",
          0.6, "hex(#df4a68)",
          0.8, "hex(#fea16e)",
          1, "hex(#fcfdbf)"
        ]
      },
      "filter": ["in", "$type", "Point"]
    }
  ]
}
