{
  "sources": {
    "task-thermal-source": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/tceglar/heat/master/data/smallsample.geojson"
            }
  },
  "layers": [
    {
      "id": "custom-heatmap-layer",
      "type": "heatmap",
      "source": "task-thermal-source",
      "maxzoom": 20,
      "paint": {
        "heatmap-weight": [
          "interpolate",
          ["linear"],
          ["get", "mag"],
          0, 0,
          6, 1
        ],
        "heatmap-intensity": [
          "interpolate",
          ["linear"],
          ["zoom"],
          0, 1,
          20, 3
        ],
        "heatmap-color": [
          "interpolate",
          ["linear"],
          ["heatmap-density"],
          0, "rgba(252,255,164,0)",
          0.2, "rgba(252,166,12,0.5)",
          0.4, "rgba(222,82,56,1)",
          0.6, "rgba(149,38,103,1)",
          0.8, "rgba(68,10,104,1)",
          1, "rgba(1,0,5,1)"
        ],
        "heatmap-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          0, 2,
          20, 20
        ],
      },
      "filter": ["in", "$type", "Point"]
    }
  ]
}
