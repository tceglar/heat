{
  "sources": {
    "task-thermal-source": {
      "type": "geojson",
      "data": "https://raw.githubusercontent.com/tceglar/heat/master/data/smallsample.geojson"
            }
  },
  "layers": [
    {
      "id": "custom-heatmap-layer",
      "type": "heatmap",
      "source": "task-thermal-source",
      "maxzoom": 9,
      "paint": {
        "heatmap-weight": [
          "interpolate",
          ["linear"],
          ["get", "mag"],
          0, 0,
          6, 1
        ],
        "heatmap-radius": 4,
        "heatmap-color": [
          "interpolate",
          ["linear"],
          ["heatmap-density"],
          0, "rgba(33,102,172,0)",
          0.2, "rgb(103,169,207)",
          0.4, "rgb(209,229,240)",
          0.6, "rgb(253,219,199)",
          0.8, "rgb(239,138,98)",
          1, "rgb(178,24,43)"
        ]
      },
      "filter": ["in", "$type", "Point"]
    }
  ]
}
